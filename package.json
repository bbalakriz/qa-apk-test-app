{
  "name": "qa-apk-test-automation",
  "version": "1.0.0",
  "description": "QA Automation tests for Android APK using Appium, WebdriverIO, and Cucumber",
  "main": "index.js",
  "scripts": {
    "test": "npx wdio run wdio.conf.js",
    "test:smoke": "npx wdio run wdio.conf.js --cucumberOpts.tagExpression='@smoke'",
    "test:regression": "npx wdio run wdio.conf.js",
    "test:setup": "./scripts/run-tests.sh setup",
    "setup": "./scripts/setup-environment.sh",
    "deploy": "./scripts/manage-apk.sh deploy",
    "install-apk": "./scripts/manage-apk.sh install",
    "verify": "node scripts/verify-setup.js",
    "verify-versions": "./scripts/verify-versions.sh",
    "check-versions": "./scripts/verify-versions.sh",
    "appium": "npx appium --port 4723",
    "clean": "rm -rf node_modules screenshots/* test-results/* logs/* && npm install",
    "podman:hybrid": "./docker/start-hybrid.sh",
    "podman:build": "cd docker && podman build -t qa-automation ."
  },
  "keywords": [
    "appium",
    "webdriverio",
    "cucumber",
    "android",
    "automation",
    "testing"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@wdio/cli": "^8.24.0",
    "@wdio/cucumber-framework": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "@wdio/appium-service": "^8.24.0",
    "appium": "^2.2.1",
    "appium-uiautomator2-driver": "^2.34.1",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  },
  "dependencies": {
    "webdriverio": "^8.24.0"
  }
} 